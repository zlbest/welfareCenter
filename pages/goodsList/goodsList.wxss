/* pages/goodsList/goodsList.wxss */
.container {
  height: 100vh;
  background: #F6F5F5;
}
.nav-top {
  width: 100%;
  height: 120rpx;
  padding: 0 40rpx;
  justify-content: space-between;
  background: #fff;
}
.lastCoin {
  font-size: 32rpx;
}
.lastCoin .gray {
  color: #999;
}
.record-btn {
  width: 136rpx;
  line-height: 50rpx;
  border: 2rpx solid #FE8606;
  border-radius: 25rpx;
  box-shadow: 0 4rpx 12rpx 0 rgba(255, 138, 64, 0.19);
  text-align: center;
  font-size: 24rpx;
  color: #FE8606;
}

/* 商品列表 */
.goods-item {
  width: 710rpx;
  height: 260rpx;
  margin: 20rpx auto;
  justify-content: flex-start;
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
}
.goods-img {
  width: 260rpx;
  height: 100%;
  background: #f6f5f5;
}
.goods-detail {
  height: 100%;
  margin-left: 30rpx;
  padding: 30rpx 0;
  justify-content: space-between;
  align-items: flex-start;
}
.goods-name {
  display: -webkit-box;
  width: 390rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.detail-bottom {
  width: 100%;
  height: auto;
  justify-content: space-between;
}
.goods-timeCoin {
  font-size: 32rpx;
  color: #FE8606;
  line-height: 28rpx;
}
.goods-timeCoin .unit {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
}
.exchange-btn {
  width: 120rpx;
  line-height: 50rpx;
  background-image: linear-gradient(-180deg, #FE7D03 0%, #FCA311 100%);
  box-shadow: 0 4rpx 6rpx 0 rgba(255,138,64,0.19);
  border-radius: 25rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
}
.exchange-btn.disabled {
  opacity: 0.3;
}
.list-bottom {
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: gray;
  padding: 10rpx;
}

/* 缺省样式 */
.goods-none {
  width: 100vw;
  height: calc(100vh - 140rpx);
  justify-content: flex-start;
  margin-top: 20rpx;
  background: #fff;
}
.goods-none > image {
  width: 160rpx;
  height: 160rpx;
  margin-top: 220rpx;
}
.none-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 40rpx;
}