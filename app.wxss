/**app.wxss**/
page{
  font-size: 28rpx;
  color: #333;
}
.none{
  display: none !important;
}
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}
.flex-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.common-btn{
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: white;
  background-image: linear-gradient(-180deg, #FE7D03 0%, #FCA311 100%);
  box-shadow: 0 12rpx 12rpx 0 rgba(255,138,64,0.19);
  border-radius: 60rpx;
}
.disable-btn{
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: white;
  background-image: linear-gradient(-180deg, #FE7D03 0%, #FCA311 100%);
  box-shadow: 0 12rpx 12rpx 0 rgba(255,138,64,0.19);
  border-radius: 60rpx;
  opacity: 0.3;
}